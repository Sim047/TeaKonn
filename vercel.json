{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://teakonn-production.up.railway.app/api/$1" },
    { "source": "/uploads/(.*)", "destination": "https://teakonn-production.up.railway.app/uploads/$1" }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "frontend/dist/assets/$1" },
    { "src": "/icons/(.*)", "dest": "frontend/dist/icons/$1" },
    { "src": "/site.webmanifest", "dest": "frontend/dist/site.webmanifest" },
    { "src": "/favicon.ico", "dest": "frontend/dist/favicon.ico" },
    { "src": "/robots.txt", "dest": "frontend/dist/robots.txt" },
    { "src": "/", "dest": "frontend/dist/index.html" },
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ]
}
{
  "buildCommand": "npm run build",
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://teakonn-production.up.railway.app/api/$1" },
    {
      "source": "/uploads/(.*)",
      "destination": "https://teakonn-production.up.railway.app/uploads/$1"
    }
  ]
}
